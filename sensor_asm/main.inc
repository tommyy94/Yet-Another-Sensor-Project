;******************************************************************************;
;   MACROS
;******************************************************************************;
.listmac

.macro SAVE_SREG    
    in r16, SREG            ;read status register
    push r16                ;save status register to stack
.endmacro


.macro RESTORE_SREG  
    pop r16                  ;get previous flag register from stack
    out SREG, r16            ;restore status register
.endmacro
